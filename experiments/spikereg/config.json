{

    "experiment-name": "spikereg",
    "database": {"address":"mongodb"},
    "language"   : "PYTHON",
    
    "resources" : {
	"my-machine" : {
	    "scheduler"         : "local",
	    "max-concurrent"    : 3,
	    "max-finished-jobs" : 50
	}
    },

    "tasks": {
	"main" : {
	    "type"       : "OBJECTIVE",
	    "likelihood" : "GAUSSIAN",
	    "main-file"  : "po.py",
	    "resources"  : ["my-machine"]
	}
    },
    
    "variables" : {
	"nl" : {
	    "type" : "INT",
	    "size" : 1,
	    "min"  : 1,
	    "max"  : 2
	},
	"n" : {
	    "type" : "INT",
	    "size" : 1,
	    "min"  : 1,
	    "max"  : 20
	},
	"iter" : {
	    "type" : "FLOAT",
	    "size" : 1,
	    "min"  : 0,
	    "max"  : 1
	}
    }
}





